{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "description": "Debug build with ccache",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "release-ccache",
            "displayName": "Release with ccache",
            "description": "Optimized release build with ccache",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "ci",
            "displayName": "CI Build",
            "description": "Configuration matching CI environment",
            "generator": "Ninja", 
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Default Build",
            "description": "Build with default configuration"
        },
        {
            "name": "debug",
            "configurePreset": "debug", 
            "displayName": "Debug Build",
            "description": "Build debug configuration with ccache"
        },
        {
            "name": "release-ccache",
            "configurePreset": "release-ccache",
            "displayName": "Release Build (ccache)",
            "description": "Fast release build with ccache"
        },
        {
            "name": "parallel",
            "configurePreset": "release-ccache",
            "displayName": "Parallel Release Build",
            "description": "Fast parallel release build",
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": false}
        },
        {
            "name": "parallel",
            "configurePreset": "release-ccache",
            "output": {"outputOnFailure": true},
            "execution": {
                "noTestsAction": "error", 
                "stopOnFailure": false,
                "jobs": 0
            }
        }
    ]
}
